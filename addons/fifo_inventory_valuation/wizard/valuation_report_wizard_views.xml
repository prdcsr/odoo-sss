<odoo>
    <record id="view_fifo_inventory_valuation_form" model="ir.ui.view">
        <field name="name">fifo.inventory.valuation.wizard.form</field>
        <field name="model">fifo.inventory.valuation.wizard</field>
        <field name="arch" type="xml">
            <form string="FIFO Inventory Valuation">
                <group>
                    <field name="date"/>
                    <field name="location_id"/>
                    <field name="include_child_locations"/>

                    <field name="export_filename" invisible="1"/>
                    <field name="export_file" filename="export_filename" invisible="0" readonly="1"/>
                    <footer>
                        <button name="action_calculate" type="object" string="Calculate" class="btn-primary"/>
                        <button name="action_export_excel" type="object" string="Export to Excel"
                                class="btn-secondary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>

                </group>
                <separator string="Valuation Lines"/>
                <field name="line_ids">
                    <tree editable="bottom">
                        <field name="product_id"/>
                        <field name="quantity"/>
                        <field name="cost"/>
                        <field name="total_value"/>
                    </tree>
                </field>
            </form>
        </field>
    </record>
</odoo>
