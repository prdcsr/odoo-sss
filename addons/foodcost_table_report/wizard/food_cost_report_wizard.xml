<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <!-- Form View for the Wizard -->
  <record id="view_food_cost_report_wizard_form" model="ir.ui.view">
    <field name="name">food.cost.report.wizard.form</field>
    <field name="model">food.cost.report.wizard</field>
    <field name="arch" type="xml">
      <form string="Food Cost Report">
        <group>
          <field name="warehouse_id"/>
          <field name="start_date"/>
          <field name="end_date"/>
        </group>
        <footer>
          <button name="action_view_qweb_table" type="object" string="Generate Report" class="btn-primary"/>
          <button string="Cancel" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <!-- Action to open the wizard -->
  <record id="action_food_cost_report_wizard" model="ir.actions.act_window">
    <field name="name">Food Cost Report</field>
    <field name="res_model">food.cost.report.wizard</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_food_cost_report_wizard_form"/>
    <field name="target">new</field>
  </record>

  <!-- Menu item under Inventory â†’ Reporting -->
  <menuitem id="menu_food_cost_report"
            name="Food Cost Report"
            parent="stock.menu_warehouse_report"
            action="action_food_cost_report_wizard"
            sequence="10"/>

</odoo>
