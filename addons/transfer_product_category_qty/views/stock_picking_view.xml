<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_picking_form_inherited" model="ir.ui.view">
            <field name="name">stock.picking.form.inherited</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook" position="after">
                    <widget name="category_summary"/>
                </xpath>

                <xpath expr="//field[@name='move_ids_without_package']/tree" position="inside">
                    <field name="product_categ_id" invisible="1"/>
                </xpath>


            </field>
        </record>
    </data>
</odoo>