<odoo>
<record id="view_food_cost_detail_report_wizard" model="ir.ui.view">
    <field name="name">food.cost.detail.report.wizard.form</field>
    <field name="model">food.cost.detail.report.wizard</field>
    <field name="arch" type="xml">
        <form string="Food Cost Detail Report" create="false" edit="false" delete="false">
            <group>
                <field name="warehouse_id"/>
                <field name="product_id"/>
                <field name="report_date"/>
            </group>
            <separator string="Report Lines"/>
            <field name="line_ids" nolabel="1" options="{'no_create': True, 'no_create_edit': True}">
                <tree delete="false" editable="false">
                    <field name="date"/>
                    <field name="description"/>
                    <field name="quantity"/>
                    <field name="uom_name"/>
                    <field name="balance"/>
                </tree>
            </field>
            <footer>
                <button string="Close" special="cancel" class="btn-secondary"/>
            </footer>
        </form>
    </field>
</record>


<record id="action_food_cost_detail_report_wizard" model="ir.actions.act_window">
    <field name="name">Food Cost Detail Report</field>
    <field name="res_model">food.cost.detail.report.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

    <menuitem id="menu_food_cost_detail_report"
            name="Food Cost Detail Report"
            parent="stock.menu_warehouse_report"
            action="action_food_cost_detail_report_wizard"
            sequence="20"/>

</odoo>
