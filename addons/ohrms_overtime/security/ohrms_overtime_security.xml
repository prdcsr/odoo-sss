<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.module.category" id="base.module_category_human_resources_overtime">
            <field name="description">Helps you manage your overtime.</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_hr_overtime_responsible" model="res.groups">
            <field name="name">Responsible</field>
            <field name="category_id" ref="base.module_category_human_resources_overtime"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_hr_overtime_user" model="res.groups">
            <field name="name">All Approver</field>
            <field name="category_id" ref="base.module_category_human_resources_overtime"/>
            <field name="implied_ids" eval="[(4, ref('ohrms_overtime.group_hr_overtime_responsible'))]"/>
        </record>

        <record id="group_hr_overtime_managed_approver" model="res.groups">
            <field name="name">Managed Approver</field>
            <field name="category_id" ref="base.module_category_human_resources_overtime"/>
            <field name="implied_ids" eval="[(4, ref('ohrms_overtime.group_hr_overtime_responsible'))]"/>
        </record>

        <record id="group_hr_overtime_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="base.module_category_human_resources_overtime"/>
            <field name="implied_ids" eval="[(4, ref('ohrms_overtime.group_hr_overtime_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('ohrms_overtime.group_hr_overtime_manager'))]"/>
        </record>

        <record id="hr_overtime_rule_employee" model="ir.rule">
            <field name="name">Overtime base.group_user read</field>
            <field name="model_id" ref="model_hr_overtime"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4,ref('base.group_user'))]"/>
        </record>

        <record id="hr_overtime_rule_employee_update" model="ir.rule">
            <field name="name">Overtime base.group_user create/write</field>
            <field name="model_id" ref="model_hr_overtime"/>
            <field name="domain_force">[
                '&amp;',
                ('employee_id.user_id', '=', user.id),
                ('state', 'not in', ['approved', 'approved1']),
                ]
            </field>
            <field name="perm_read" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4,ref('base.group_user'))]"/>
        </record>

        <record id="hr_overtime_rule_employee_unlink" model="ir.rule">
            <field name="name">Overtime base.group_user unlink</field>
            <field name="model_id" ref="model_hr_overtime"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id), ('state', '=', 'draft')]</field>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="hr_overtime_rule_user_read" model="ir.rule">
        <field name="name">Overtime All Approver read</field>
        <field name="model_id" ref="model_hr_overtime"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4, ref('ohrms_overtime.group_hr_overtime_user'))]"/>
    </record>

    <record id="hr_overtime_rule_officer_update" model="ir.rule">
        <field name="name">Overtime All Approver create/write</field>
        <field name="model_id" ref="model_hr_overtime"/>
        <field name="domain_force">[
            '|',
                '&amp;',
                    ('employee_id.user_id', '=', user.id),
                    ('state', '!=', 'approved'),
                '|',
                    ('employee_id.user_id', '!=', user.id),
                    ('employee_id.user_id', '=', False)
        ]</field>
        <field name="perm_read" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4, ref('ohrms_overtime.group_hr_overtime_user'))]"/>
    </record>
    </data>

    <record id="hr_overtime_rule_manager" model="ir.rule">
        <field name="name">Overtime Administrator</field>
        <field name="model_id" ref="model_hr_overtime"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('ohrms_overtime.group_hr_overtime_manager'))]"/>
    </record>

    <record id="hr_overtime_rule_responsible_read" model="ir.rule">
        <field name="name">Overtime Responsible read</field>
        <field name="model_id" ref="model_hr_overtime"/>
        <field name="domain_force">[
                ('employee_id.leave_manager_id', '=', user.id),
        ]</field>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4, ref('ohrms_overtime.group_hr_overtime_responsible'))]"/>
    </record>

    <record id="hr_overtime_rule_responsible_update" model="ir.rule">
        <field name="name">Overtime Responsible create/write</field>
        <field name="model_id" ref="model_hr_overtime"/>
        <field name="domain_force">[
            '|',
                '&amp;',
                    ('employee_id.user_id', '=', user.id),
                    ('state', '!=', 'approved'),
                ('employee_id.leave_manager_id', '=', user.id),
        ]</field>
        <field name="perm_read" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4, ref('ohrms_overtime.group_hr_overtime_responsible'))]"/>
    </record>

    <record id="hr_overtime_rule_managed_approver_action" model="ir.rule">
        <field name="name">Overtime Responsible action</field>
        <field name="model_id" ref="model_hr_overtime"/>
        <field name="domain_force">[
            '|',
                '|',
                '|',
                    ('employee_id.leave_manager_id', '=', user.id),
                    ('employee_id.user_id', '=', user.id),
                    ('employee_id.parent_id.user_id', '=', user.id),
                '|',
                '|',
                    ('department_id', '=', False),
                    ('department_id.member_ids.user_id', 'in', [user.id]),
                    ('department_id.manager_id.user_id', '=', user.id)
        ]</field>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4, ref('ohrms_overtime.group_hr_overtime_managed_approver'))]"/>
    </record>

</odoo>