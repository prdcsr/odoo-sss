<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
        <record id="view_print_picking_list_form" model="ir.ui.view">
            <field name="name">print.picking.list.form</field>
            <field name="model">print.picking.list</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
	            <form string="Print Picking List Report">
	                	<field name="picking_report_printed" invisible="1"/>
	                	<group attrs="{'invisible':[('picking_report_printed','=',True)]}">
	                		<group>
	                			<field name="from_date" required="1" style="width:200px;"/>
	                			<field name="to_date" required="1" style="width:200px;"/>
	                		</group>
	                		<group>
	                			<field name="picking_type_ids"
								options="{'no_create': True}"
								widget="many2many_tags"
								required="1" style="width:200px;"/>
	                		</group>
	                	</group>
	                	<group attrs="{'invisible':[('picking_report_printed','=',False)]}">
	                	    <field name="file_name" invisible="1"/>
	                		<field name="picking_list_file" readonly="1" filename="file_name"/>
	                	</group>
						<group attrs="{'invisible':[('picking_report_printed','=',True)]}">
							<field name="report_type" required="1"/>
	                	</group>
	                <footer>
	                <button string='Print' name="action_print_picking_list" 
	                	type="object" class="btn-primary" attrs="{'invisible':[('picking_report_printed','=',True)]}"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
	                </footer>
	            </form>
            </field>
        </record>
       
        <record id="action_print_picking_list" model="ir.actions.act_window">
            <field name="name">Print Picking List Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">print.picking.list</field>
            <!-- field name="view_type">form</field -->
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
       <menuitem action="action_print_picking_list" id="menu_print_picking_list_report" 
       	sequence="200" parent="stock.menu_warehouse_report" />	
        
</odoo>
