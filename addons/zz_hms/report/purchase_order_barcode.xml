<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="purchase_order_barcode" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//div[@id='informations']" position="inside">
                <div class="col-3 bm-2">
                    <strong>Barcode:</strong>
                    <img alt="barcode"
                         t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 800, 120)"
                         style="max-height:50pt;max-width:100%;"/>
                </div>
            </xpath>
        </template>
    </data>
</odoo>