<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_time_warning_wizard" model="ir.ui.view">
        <field name="name">stock.picking.time.warning.wizard.form</field>
        <field name="model">stock.picking.time.warning.wizard</field>
        <field name="arch" type="xml">
            <form string="Operation Type Check">
                <div style="text-align: center; padding: 40px 20px;">
                    <h1 style="font-size: 48px; font-weight: bold; color: #e74c3c; margin-bottom: 30px;">
                        Ini <field name="operation_type" readonly="1" style="text-decoration: underline;"/>
                    </h1>
                    <h2 style="font-size: 24px; color: #2c3e50;">
                        Pastikan anda input tempat yang benar.
                    </h2>
                </div>

                <footer>
                    <button name="action_confirm" type="object" string="Validate" class="btn-primary"/>
                    <button name="action_cancel" type="object" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>