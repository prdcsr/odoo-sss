<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_validation_confirmation_wizard" model="ir.ui.view">
    <field name="name">stock.picking.validation.confirmation.wizard.form</field>
    <field name="model">stock.picking.validation.confirmation.wizard</field>
    <field name="arch" type="xml">
        <form string="Confirm Validation">
            <group>
                <field name="line_ids">
                    <tree>
                        <field name="product_id"/>
                        <field name="food_cost"/>
                        <field name="max_food_cost"/>
                    </tree>
                </field>
            </group>
            <footer>
                <button name="action_confirm" type="object" string="Validate" class="btn-primary"/>
                <button name="action_cancel" type="object" string="Cancel" class="btn-secondary"/>
            </footer>
        </form>
    </field>
</record>

</odoo>
