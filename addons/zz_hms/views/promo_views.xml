<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_fnb_promo_schedule_tree" model="ir.ui.view">
        <field name="name">fnb.promo.schedule.tree</field>
        <field name="model">fnb.promo.schedule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="weekday_ids"/>
                <field name="time_start"/>
                <field name="time_end"/>
            </tree>
        </field>
    </record>
    <record id="view_fnb_promo_schedule_form" model="ir.ui.view">
        <field name="name">fnb.promo.schedule.form</field>
        <field name="model">fnb.promo.schedule</field>
        <field name="arch" type="xml">
            <form string="Promotion Schedule">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                            <field name="notes"/>
                        </group>
                        <group string="Date and Time">
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="weekday_ids"/>
                            <field name="weekday_multi">
                                <field name="name"/>
                                <field name="code"/>
                            </field>
                            <field name="time_start" widget="float_time"/>
                            <field name="time_end" widget="float_time"/>
                        </group>
                    </group>

                    <field name="promo_lines" widget="one2many" mode="tree">
                        <tree string="Sales Order Lines" editable="bottom">
                            <field name="product_id"/>
                            <field name="name"/>
                            <field name="location_id"/>
                            <field name="max_qty"/>
<!--                            <field name="qty"/>-->
                            <field name="uom_id"/>
                        </tree>

                    </field>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_fnb_promo_schedule" model="ir.actions.act_window">
        <field name="name">Promotion Schedules</field>
        <field name="res_model">fnb.promo.schedule</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
