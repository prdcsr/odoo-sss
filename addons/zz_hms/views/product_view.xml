<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_product_food_cost_location_inherit" model="ir.ui.view">
        <field name="name">product.template.food.cost.location.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_template_property_form"/>
        <field name="arch" type="xml">

            <group name="inventory" position="after">
                <group name="product_location_food_cost" string="Food Cost">
                    <field name="product_location_food_cost_ids"
                           context="{'default_product_tmpl_id':context.get('product_tmpl_id',active_id), 'product_template_invisible_variant': True}"
                           nolabel="1" attrs="{'invisible': [('product_variant_count','&gt;',1)]}"
                           widget="section_and_note_one2many"
                    >
                        <tree string="Purchase Order Lines" editable="bottom" delete="true">
                            <field name="name"/>
                            <field name="product_tmpl_id" readonly="1"/>
                            <field name="max_food_cost"/>
                            <field name="weekend_food_cost"/>
                            <field name="promotion_food_cost"/>
                            <field name="uom_id"/>
                        </tree>
                    </field>
                </group>

                <field name="variant_location_food_cost_ids"
                       context="{'default_product_tmpl_id': context.get('product_tmpl_id', active_id)}" nolabel="1"
                       attrs="{'invisible': [('product_variant_count','&lt;=',1)]}"/>
            </group>

        </field>
    </record>

    <record id="view_product_food_cost_tree" model="ir.ui.view">
        <field name="name">product.food.cost.tree</field>
        <field name="model">product.food.cost</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="product_tmpl_id"/>
                <field name="max_food_cost"/>
                <field name="weekend_food_cost"/>
<!--                <field name="promotion_food_cost"/>-->
                <field name="uom_id"/>
            </tree>
        </field>
    </record>

    <record id="view_product_food_cost_form" model="ir.ui.view">
        <field name="name">product.food.cost.form</field>
        <field name="model">product.food.cost</field>
        <field name="arch" type="xml">
            <form string="Product Food Cost">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="product_tmpl_id"/>
                            <field name="product_id"/>
                        </group>
                        <group string="Quantity">
                            <field name="max_food_cost"/>
                            <field name="weekend_food_cost"/>
<!--                            <field name="promotion_food_cost"/>-->
                            <field name="uom_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_stock_product_food_cost" model="ir.actions.act_window">
        <field name="name">Product Food Cost</field>
        <field name="res_model">product.food.cost</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="product_food_cost"
            name="Product Food Cost"
            parent="stock.menu_stock_inventory_control"
            action="action_stock_product_food_cost"

    />

</odoo>