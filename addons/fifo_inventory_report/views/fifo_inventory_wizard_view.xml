<odoo>
    <record id="view_fifo_inventory_report_wizard" model="ir.ui.view">
        <field name="name">fifo.inventory.report.wizard.form</field>
        <field name="model">fifo.inventory.report.wizard</field>
        <field name="arch" type="xml">
            <form string="FIFO Inventory Valuation">
                <group>
                    <field name="date"/>
                    <field name="location_id"/>
                    <field name="include_child_locations"/>
                    <field name="show_details"/>
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="action_generate_html" class="btn-primary"/>
                    <button string="Export to Excel" type="object" name="action_export_excel"/>
                    <button string="Close" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_fifo_inventory_report" model="ir.actions.act_window">
        <field name="name">FIFO Inventory Report</field>
        <field name="res_model">fifo.inventory.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_inventory_fifo_root" name="Location Inventory Valuation"
              parent="stock.menu_warehouse_report"
              action="action_fifo_inventory_report"/>
</odoo>