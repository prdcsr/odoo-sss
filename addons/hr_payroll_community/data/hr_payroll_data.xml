         <record id="hr_rule_meal_allowance" model="hr.salary.rule">
            <field name="name">Uang Makan</field>
            <field name="sequence" eval="1"/>
            <field name="code">WORK100</field>
            <field name="category_id" ref="hr_payroll_community.Meal"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">
number_of_days = 0
for line in payslip.worked_days_line_ids:
    if line.code ==  'WORK100':
         number_of_days += line.number_of_days
result = contract.meal_allowance/20 * number_of_days
            </field>
        </record>

         <record id="hr_rule_off_late_deduction" model="hr.salary.rule">
            <field name="name">CUTI,IZIN,TELAT</field>
            <field name="sequence" eval="5"/>
            <field name="code">CDT</field>
            <field name="category_id" ref="hr_payroll_community.DED"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">
number_of_days = 0
for line in payslip.worked_days_line_ids:
    if  line.code=="cuti2025" or line.code=="cuti_tdk_byr_25":
         number_of_days += line.number_of_days
    if  line.code=="skt_2025":
         number_of_days += line.number_of_days
    if  line.code=="telat_dpt_um_2025" or line.code=="telat_ptg_um_2025":
         number_of_days += line.number_of_days*0.5
    if  line.code=="izin_dpt_um_2025":
         number_of_days += line.number_of_days
    if  line.code=="izin_ptg_um_2025":
         number_of_days += line.number_of_days*0.5
    if  line.code=="GLOBAL":
          number_of_days += 1
    if line.code=='dinas_ln':
        number_of_days += line.number_of_days
    if line.code=="dinasluarkota_25":
        number_of_days += line.number_of_days
    if line.code == 'skt_pot_kerajinan':
        number_of_days += line.number_of_days
result = contract.meal_allowance/20  * number_of_days * -1
            </field>
        </record>

