<odoo>

    <record id="stock_sales_report_wizard_form" model="ir.ui.view">
        <field name="name">stock.sales.report.wizard.form</field>
        <field name="model">stock.sales.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group name="criteria">
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                </group>
                <footer>
                    <button name="button_export_stock_sales_report" string="Export" type="object"
                             default_focus="1" class="oe_highlight"/>

                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="stock_sales_report_action" model="ir.actions.act_window">
        <field name="name">Stock Sales</field>
        <field name="res_model">stock.sales.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
            id="stock_sales_report_menu"
            action="stock_sales_report_action"
            parent="stock.menu_warehouse_report"
            sequence="30"
    />

</odoo>
