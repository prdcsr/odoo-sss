<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_hr_summary_export_form" model="ir.ui.view">
            <field name="name">view.hr.summary.export.form</field>
            <field name="model">summary.export.form</field>
            <field name="arch" type="xml">

                <form>

                    <templates>


                        <input type="hidden" name="csrf_token" id="csrf_token" t-att-value="request.csrf_token()"/>

                        <group string="Periode Bulan">
                            <div class="form-group">
                                <input type="month" string="Periode Bulan" class="form-control" id="month" name="month"/>
                            </div>

                        </group>


                        <footer>
                            <button
                                    type="submit"
                                    value="submit"
                                    id="summary_export_button_submit"
                                    string="Submit"
                                    default_focus="1"
                                    class="oe_highlight summary_export_button_submit"
                            />
                            <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                        </footer>

                    </templates>
                </form>

            </field>
        </record>

        <record id="hr_summary_export_action" model="ir.actions.act_window">
            <field name="name">Summary Export</field>
            <field name="res_model">summary.export.form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>