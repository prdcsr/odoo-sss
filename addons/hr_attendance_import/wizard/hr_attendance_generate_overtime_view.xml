<odoo>

    <record id="hr_attendance_generate_overtime" model="ir.ui.view">
        <field name="name">hr.attendance.generate.overtime.form</field>
        <field name="model">hr.overtime.wizard</field>
        <field name="inherit_id" ref="ohrms_overtime.hr_overtime_form_view"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='employee_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//header" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//sheet" position="after">
                <footer>
                    <button name="create_overtime" type="object" string="Create Overtime" class="btn btn-primary"/>
                    <button name="cancel" string="Cancel" special="cancel"/>

                </footer>
            </xpath>
        </field>
    </record>

    <record id="action_generate_overtime" model="ir.actions.act_window">
        <field name="name">Generate Overtime</field>
        <field name="type">ir.actions.act_window</field>
<!--        <field name="res_model">hr.attendance.generate.time.off</field>-->
        <field name="res_model">hr.overtime.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="hr_attendance_generate_overtime"/>
        <field name="context">{}</field>
        <field name="target">new</field>
        <field name="help">This wizard create new overtime request</field>
        <field name="binding_model_id" ref="hr_attendance.model_hr_attendance"/>
    </record>

</odoo>