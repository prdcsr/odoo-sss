<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">
    <t t-name="hr_attendance_import.leave_type">
        <table class="o_group o_inner_group table-striped">
        <thead>
            <tr>
                <td colspan="2">
                    <div class="o_horizontal_separator">Summary Cuti <t t-esc="widget.employee.data.display_name"/>
                        <t t-esc="widget.date.format('YYYY')"/></div>
                </td>
            </tr>
        </thead>
            <tbody>
            <t t-if="widget.leaveSummary.length === 0">
                <tr>
                    <td>None</td>
                </tr>
            </t>
                <t t-foreach="widget.leaveSummary" t-as="leave_type">
                <tr>
                    <td><t t-esc="leave_type.holiday_status_id[1]"/></td>
                    <td class="w-50"><t t-esc="leave_type.number_of_days"/>
                        day(s)</td>
                </tr>
            </t>
        </tbody>
        </table>
    </t>

    <t t-name="hr_attendance_import.leaves_date">


        <table class="o_group o_inner_group table-striped" style="word-wrap:break-word;table-layout: fixed;">
            <thead>
                <div class="o_horizontal_separator">Tanggal Cuti <t t-esc="widget.employee.data.display_name"/>
                    <t t-esc="widget.date.format('YYYY')"/></div>
            </thead>
            <tbody>
                <t t-if="widget.leavesDate.length === 0">
                    <tr>
                        <td>None</td>
                    </tr>
                </t>
                <t t-foreach="widget.leavesDate" t-as="leave">
                    <tr>
                        <td><t t-esc="leave.name"/></td>
                        <td><t t-esc="leave.holiday_status_id[1]"/></td>
                        <td class="w-50"><t t-esc="leave.date_from"/>
                            -
                            <t t-esc="leave.date_to"/> (<t t-esc="leave.number_of_days"/> day(s) )</td>
                    </tr>
                    <!--                <tr t-attf-class="{{leave.employee_id[0] === widget.employee.res_id ? 'font-weight-bold' : ''}}">-->
                    <!--                    <td><t t-esc="leave.employee_id[1]"/>: <t t-esc="leave.number_of_days"/> day(s) </td>-->
                    <!--                    <td class="w-50"><t t-esc="leave.date_from"/> - <t t-esc="leave.date_to"/></td>-->
                    <!--                </tr>-->
                </t>
            </tbody>
        </table>
    </t>

    <div t-name="hr_attendance_import.leave_summary" class="o_leave_stats">
        <t t-if="widget.employee">
            <t t-if="widget.leaveSummary">
                <t t-call="hr_attendance_import.leave_type"/>
            </t>
            <t t-if="widget.leavesDate">
                <t t-call="hr_attendance_import.leaves_date"/>
            </t>
        </t>
    </div>

</templates>
