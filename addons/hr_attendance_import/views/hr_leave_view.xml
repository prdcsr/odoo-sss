<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_leave_view_form_manager_inherited" model="ir.ui.view">
            <field name="name">hr.leave.view.form.manager.inherited</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_view_form_manager"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="subtract_diligence"/>
                </xpath>
                <xpath expr="//group" position="after">
                    <group class="mt-2">
                        <widget name="attendance_stats"/>
                    </group>
                    <group class="mt-0">
                        <widget name="hr_leave_summary"/>
                    </group>
                </xpath>

            </field>
        </record>

        <record id="hr_leave_view_form_manager_approve_inherited" model="ir.ui.view">
            <field name="name">hr.leave.view.form.manager.approve.inherited</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_view_form_manager_approve"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="subtract_diligence"/>
                </xpath>
                <xpath expr="//group" position="after">
                    <group class="mt-2">
                        <widget name="attendance_stats"/>
                    </group>
                    <group class="mt-0">
                        <widget name="hr_leave_summary"/>
                    </group>
                </xpath>

            </field>
        </record>
    </data>

</odoo>
