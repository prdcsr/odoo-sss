<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- OPEN ITEMS -->
    <record id="product_stock_report_wizard" model="ir.ui.view">
        <field name="name">Product Stock Report</field>
        <field name="model">product.stock.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group name="main_info">
                    <field
                            widget="many2many_tags"
                            name="operating_unit_ids"
                            options="{'no_create': True}"
                            groups="operating_unit.group_multi_operating_unit"
                            domain="[('user_ids', 'in', uid)]"

                    />
                </group>
                <group name="location_filter" col="1">
                    <label for="location_ids"/>
                    <field
                            name="location_ids"
                            nolabel="1"
                            widget="many2many_tags"
                            options="{'no_create': True}"
                    />
                </group>
                <group name="product_filter" col="4">


<!--                    <field-->
<!--                            name="internal_code"-->
<!--                            colspan="4"-->
<!--                    />-->

<!--                    <field-->
<!--                            name="part_no"-->
<!--                            colspan="4"-->
<!--                    />-->

                    <field
                            name="product_name"
                            colspan="4"
                    />
                </group>
                <footer>
                    <button
                            name="button_export_html"
                            string="View"
                            type="object"
                            default_focus="1"
                            class="oe_highlight"
                    />
                    or
                    <button
                            name="button_export_pdf"
                            string="Export PDF"
                            type="object"
                    />
                    or
                    <!--                    <button-->
                    <!--                        name="button_export_xlsx"-->
                    <!--                        string="Export XLSX"-->
                    <!--                        type="object"-->
                    <!--                    />-->
                    <!--                    or-->
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window
            id="action_product_stock_report_wizard"
            name="Stock Report"
            res_model="product.stock.report.wizard"
            view_mode="form"
            view_id="product_stock_report_wizard"
            target="new"
    />
    <!--Add to res.partner action-->
</odoo>
