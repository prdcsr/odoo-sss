<odoo>
    <record id="view_purchase_requisition_form_inherit_history_button" model="ir.ui.view">
        <field name="name">purchase.requisition.form.inherit.history.button</field>
        <field name="model">purchase.requisition</field>
        <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(sss_purchase_history.action_requisition_history_tree)d"
                        string="View History"
                        type="action"
                        class="oe_stat_button"
                        icon="fa-clock-o"
                />
            </xpath>
        </field>
    </record>
</odoo>
