	<data>
		<record id="view_order_form_inherit" model="ir.ui.view">
			<field name="name">sale.order.form.zz_sss</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name='priority'>20</field>
			<field name="arch" type="xml">
		   <xpath expr="//button[@name='action_draft']" position="after">
				<field name="cv_hascreated" invisible="1"/>
				<button name="926" string="Buat CV Trans" type="action" class="btn-primary" attrs="{'invisible': ['|','|',('invoice_status', '!=', 'to invoice'),('partner_id','!=',19747),('cv_hascreated','=',True)]}"/>
				<!-- widget name="web_ribbon" title="Paid" attrs="{'invisible': [('cv_hascreated','!=',False)]}"/ -->
		  </xpath>
		  <xpath expr="//div[@name='button_box']" position="before">
			  <widget name="web_ribbon" title="CV Created" attrs="{'invisible': [('cv_hascreated','=',False)]}"/>
			</xpath>
				<xpath expr="//field[@name='order_line']/kanban[hasclass('o_kanban_mobile')]/field[@name='product_id']" position="attributes" >
					<!-- attribute name="domain">[('operating_unit_ids', 'in', [operating_unit_id]), ('sale_ok', '=', True), '|', ('company_id', '=', False),('company_id', '=', company_id)]</attribute -->
					<attribute name="context">{'tree_view_ref': 'zz_sss.inherit_view_product_tree'}</attribute>
				</xpath>
				<!-- xpath expr="//field[@name='client_order_ref']" position="after" >
					<field name="no_code_promo_program_ids" attrs="{'readonly': [('state', 'not in', ['draft,sent'])]}"/>
				</xpath -->
			</field>
		</record>
		<record id="inherit_view_product_tree" model="ir.ui.view">
			<field name="name">zz_sss.inherit_view_product_tree</field>
			<field name="model">product.product</field>
			<field name="arch" type="xml">
			<kanban class="o_kanban_mobile">
				<field name="default_code"/>
				<field name="name"/>
				<field name="lst_price" optional="show" string="Sales Price"/>
					<templates>
						<t t-name="kanban-box">
							<div class="oe_kanban_global_click">
								<div class="row mb4">
									<strong class="col-6">
										<span t-esc="record.default_code.value"/>
									</strong>
									<div class="col-6">
										<span t-esc="record.name.value"/>
									</div>

									<strong class="col-6 text-right">
										<strong><field name="lst_price" widget="monetary"/></strong>
									</strong>
									<!-- div class="col-6 text-right">
										<span t-esc="record.delay.value"/> days
									</div -->
								</div>
							</div>
						</t>
					</templates>
			</kanban>
			</field>
		</record>
	  </data>

