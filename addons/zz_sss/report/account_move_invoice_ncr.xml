<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <report
            string="Invoice NCR"
            id="action_invoice_ncr"
            model="account.move"
            report_type="qweb-pdf"
            name="zz_sss.report_invoice_ncr"
            file="zz_sss.report_invoice_ncr"
            print_report_name="'Invoice NCR - %s - %s' % (object.partner_id.name or '', object.name)"
    />

    <template id="report_invoice_ncr">
        <t t-foreach="docs" t-as="o">
            <t t-call="zz_sss.report_invoice_ncr_document" t-lang="o.partner_id.lang"/>
        </t>
    </template>

    <template id="report_invoice_ncr_document">

        <t t-call="web.html_container">

            <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
            <t t-set="company" t-value="o.company_id"/>
            <div t-attf-class="header o_company_#{company.id}_layout">
                <div class="o_boxed_header"
                     style="font-family: 'Helvetica'; color: black; font-size: 11pt; margin-bottom: 4mm">
                    <div class="row mb8">
                        <div class="col-9">
                            <div class="first-page">
                                <div name="company_address" class="mb4">
                                    <strong><!-- img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo" class="img-fluid"/ -->
                                        <span t-field="company.name"/>
                                    </strong>
                                    <span class="company_address" t-field="company.partner_id"
                                          t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                                    <div>
                                        <!--Telp. <span t-field="company.phone"/>,-->
                                        <t t-if="company.vat"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>:
                                            <span t-esc="company.partner_id.npwp_string(company.vat)"/>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div t-attf-class="article o_report_layout_boxed o_company_#{company.id}_layout"
                 t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
                 t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-call="web.address_layout"/>
                <t t-raw="0"/>

                <t t-set="partner" t-value="o.partner_id"/>
                <t t-if="partner" name="partner_header">
                    <div class="row d-flex mb10" style="font-family:'Helvetica'; margin-bottom: 1mm;">
                        <div>
                            <span style="color: black; font-size: 11pt; margin-left: 4.5mm">Kepada YTH :</span>
                            <br/>
                            <strong class="col-9 mb4" style="color: black; font-size: 10pt">

                                <span style="font-family:'Helvetica'; font-size:11pt" t-field="o.partner_id.name"/>
                            </strong>
                            <t t-if="o.partner_id.vat">
                                <div class="col-9" style="color: black; font-size: 11pt">NPWP :
                                    <span t-field="o.partner_id.vat"/>
                                </div>
                            </t>
                            <t t-elif="o.partner_id.vat16">
                                <div class="col-9" style="color: black; font-size: 11pt">NPWP :
                                    <span t-field="o.partner_id.vat16"/>
                                </div>
                            </t>
                            <!--<t t-else="">-->
                            <!--    <div class="col-9" style="color: black; font-size: 11pt">NIK :-->
                            <!--        <span t-field="o.partner_id.l10n_id_nik"/>-->
                            <!--    </div>-->
                            <!--</t>-->
                            <!--<t t-elif="not o.partner_id.vat">-->
                            <!--    <div class="col-9" style="color: black; font-size: 11pt">NIK :-->
                            <!--        <span t-field="o.partner_id.l10n_id_nik"/>-->
                            <!--    </div>-->
                            <!--</t>-->
                            <!-- <div class="col-auto" style="color: black; font-size: 11pt; width: 95mm; text-transform: uppercase" t-esc="partner" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True}"/> -->
                            <div class="col-auto"
                                 style="color: black; font-size: 11pt; width: 100mm; text-transform: uppercase;">
                                <span t-esc="o.partner_id.street"/>
                                <span t-esc="o.partner_id.street2"/>
                                <span t-esc="o.partner_id.city"/>
                                <span t-esc="o.partner_id.state_id.name"/>
                                <span t-esc="o.partner_id.zip"/>
                                <span t-esc="o.partner_id.country_id.name"/>
                            </div>
                        </div>
                    </div>
                </t>


                <div class="page" style="font-family:'Helvetica'; color: black; font-size: 10pt">
                    <h5 style="text-align: center; font-family:'Helvetica'; color: black;">
                        <span t-if="o.type == 'out_invoice' and o.state == 'posted'">INVOICE :</span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft INVOICE</span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled INVOICE</span>
                        <span t-if="o.type == 'out_refund'">Credit Note</span>
                        <span t-if="o.type == 'in_refund'">Vendor Credit Note</span>
                        <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
                        <span t-if="o.name != '/'" t-field="o.name"/>
                    </h5>

                    <div id="informations" class="row mt16 mb16">


                        <div class="col-auto">
                            <table style="background-color:white; border: none">

                                <tr style="border: none; background-color:white; padding: 0.2rem;">
                                    <td style="border: none; background-color:white;padding: 0.2rem">
                                        <strong style="font-family: Helvetica; font-size: 11pt; font-color: black;">
                                            No Order
                                        </strong>
                                    </td>
                                    <td style="border: none; background-color:white;padding: 0.2rem">
                                        <strong style="font-family: Helvetica; font-size: 11pt; font-color: black;">
                                            :
                                        </strong>
                                    </td>
                                    <td style="border: none; background-color:white;padding: 0.2rem">
                                        <strong style="font-family: Helvetica; font-size: 11pt; font-color: black;"
                                                class="m-2" t-field="o.invoice_origin"/>
                                    </td>
                                </tr>

                                <tr style="border: none; background-color:white; padding: 0.2rem">
                                    <td style="border: none; background-color:white;padding: 0.2rem">
                                        <span style="font-family: Helvetica; font-size: 10pt">No SJ</span>
                                    </td>
                                    <td style="border: none; background-color:white;padding: 0.2rem">
                                        <span style="font-family: Helvetica; font-size: 10pt">:</span>
                                    </td>
                                    <td style="border: none; background-color:white;padding: 0.2rem">
                                        <t t-set="order" t-value="o.invoice_line_ids[0].sale_line_ids[0].order_id"/>
                                        <div class="d-flex flex-column">
                                            <div style="display: flex; flex-direction: column">
                                                <t t-foreach="order.picking_ids" t-as="picking">
                                                    <t t-if="picking.state == 'done' and ('OUT' in picking.name or 'DOTITIPAN' in picking.name)">
                                                        <p style="font-family: Helvetica; font-size: 10pt" class="m-2"
                                                           t-field="picking.name"/>
                                                    </t>
                                                </t>
                                            </div>
                                        </div>

                                    </td>
                                </tr>

                            </table>
                        </div>

                        <t t-if="o.invoice_date &lt; datetime.date(2025, 1, 1) or o.invoice_date &gt; datetime.date(2025, 2, 18)">
                            <div class="col-8" style="color: black; margin-bottom: 0.5%" t-if="o.l10n_id_tax_number"
                                 name="tax_number">
                                <div class="d-flex justify-content-end">
                                    <div class="p-2">
                                        <span style="font-family: Helvetica; font-size: 10pt">NO. FAKTUR PAJAK :</span>
                                        <span style="font-family: Helvetica; font-size: 10pt" class="m-0"
                                              t-esc="o.fp_string(o.l10n_id_tax_number)"/>
                                    </div>

                                </div>

                            </div>
                        </t>

                        <!-- div class="col-auto mw-100 mb-2" style="color: black" t-if="o.invoice_date" name="invoice_date">
                            <strong>Invoice Date:</strong>
                            <p class="m-0" t-field="o.invoice_date"/>
                        </div -->
                        <!--<div class="col-auto mw-100 mb-2" style="color: black" t-if="o.invoice_date_due and o.type == 'out_invoice' and o.state == 'posted'" name="due_date">-->
                        <!--    <strong>Due Date:</strong>-->
                        <!--    <p class="m-0" t-field="o.invoice_date_due"/>-->
                        <!--</div>-->
                        <!-- t t-if="o.operating_unit_id.id == 2 or o.company_id.id == 2" -->

                        <!--<div class="col-auto" style="color: black" t-if="o.invoice_origin or (o.operating_unit_id.id == 2 or o.company_id.id == 2)" name="origin">-->
                        <!--  <span style="font-family: Helvetica; font-size: 10pt">No Order:</span>-->
                        <!--  <span style="font-family: Helvetica; font-size: 10pt" class="m-0" t-field="o.invoice_origin"/>-->
                        <!--</div>-->

                        <!--<div class="col-auto" style="color: black" name="tranfer">-->
                        <!--  <span style="font-family: Helvetica; font-size: 10pt">No SJ:</span>-->
                        <!--  <t t-set="order" t-value="o.invoice_line_ids[0].sale_line_ids[0].order_id"/>-->
                        <!--  <t t-foreach="order.picking_ids" t-as="picking">-->
                        <!--    <t t-if="picking.state == 'done'">-->
                        <!--      <span style="font-family: Helvetica; font-size: 10pt" class="m-0" t-field="picking.name"/>-->
                        <!--    </t>-->
                        <!--  </t>-->
                        <!--</div>-->

                        <!-- /t>
                        <div class="col-auto mw-100 mb-2" style="color: black" t-if="o.partner_id.ref" name="customer_code">
                            <strong>Customer Code:</strong>
                            <p class="m-0" t-field="o.partner_id.ref"/>
                        </div -->
                        <!-- div class="col-auto mw-100 mb-2" style="color: black" t-if="o.ref" name="reference">
                            <strong>Reference:</strong>
                            <p class="m-0" t-field="o.ref"/>
                        </div -->

                        <!--<div class="col-auto" style="color: black" t-if="o.l10n_id_tax_number" name="tax_number">-->
                        <!--    <span style="font-family: Helvetica; font-size: 10pt">NO. FAKTUR PAJAK :</span>-->
                        <!--    <span style="font-family: Helvetica; font-size: 10pt" class="m-0" t-esc="o.fp_string(o.l10n_id_tax_number)"/>-->
                        <!--</div>-->
                    </div>


                    <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                    <table class="table table-sm o_main_table" name="invoice_line_table"
                           style="border-color: black; background-color:white">
                        <thead style="border-color: black; background-color:white">
                            <tr style="border-color: black; background-color:white">
                                <!-- TODO: remove in master -->
                                <t t-set="colspan" t-value="6"/>
                                <th name="th_sequence" class="text-left" style="border-color: black">
                                    <span>No.</span>
                                </th>
                                <th name="th_nopart" class="text-left" style="border-color: black">
                                    <span>Nomor Part</span>
                                </th>
                                <th name="th_description" class="text-left" style="border-color: black">
                                    <span>Nama Barang</span>
                                </th>
                                <!-- TODO: remove in master -->
                                <th name="th_source" class="d-none text-left" style="border-color: black" t-if="0">
                                    <span>Source Document</span>
                                </th>
                                <th name="th_quantity" class="text-right" style="border-color: black">
                                    <span>Quantity</span>
                                </th>
                                <th name="th_priceunit" style="border-color: black"
                                    t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span>Unit Price</span>
                                </th>
                                <!--<th name="th_price_unit" t-if="display_discount" style="border-color: black" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">-->
                                <!--    <span>Disc.%</span>-->
                                <!-- TODO: remove in master -->
                                <!--    <t t-set="colspan" t-value="colspan+1"/>-->
                                <!--</th>
                                <th name="th_taxes" style="border-color: black" t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span style="color: black; border-color: black">Taxes</span></th -->
                                <th name="th_subtotal" class="text-right"
                                    style="border-color: black; background-color:white">
                                    <span style="border-color: black; background-color:white"
                                          groups="account.group_show_line_subtotals_tax_excluded">Amount
                                    </span>
                                    <span style="border-color: black; background-color:white"
                                          groups="account.group_show_line_subtotals_tax_included">Total Price
                                    </span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody" style="color: black; border-color: black; line-height: 4mm">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="t_subtotal" t-value="0"/>
                            <t t-set="t_disc" t-value="0"/>
                            <t t-set="lines"
                               t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                            <t t-set="line_no" t-value="0"/>
                            <t t-set="tot_price_unitppn" t-value="0"/>

                            <t t-foreach="lines" t-as="line" style="color: black; border-color: black">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                   groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                   groups="account.group_show_line_subtotals_tax_included"/>
                                <t t-if="line.product_id.categ_id.name == 'Sales Discount'">
                                    <t t-set="t_disc" t-value="t_disc+line.price_total"/>
                                </t>
                                <t t-elif="line.product_id.categ_id.name != 'KELENGKAPAN' and line.product_id.categ_id.name != 'JAKET'">
                                    <!-- tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''" style="color: black; border-color: black" -->
                                    <tr style="color: black; border-color: black">
                                        <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                            <t t-set="line_no" t-value="line_no+1"/>

                                            <!-- t t-set="t_subtotal" t-value="t_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/ -->

                                            <td style="border-color: black" t-esc="line_no"/>
                                            <t t-set="grp_index" t-value="line.name.find('-')"/>
                                            <t t-set="grp_index" t-value="grp_index+2"/>
                                            <t t-set="l_name" t-value="line.name[grp_index:]"/>
                                            <t t-set="name_index" t-value="l_name.find(']')"/>
                                            <t t-set="name_index" t-value="name_index+2"/>
                                            <t t-set="line_name" t-value="l_name[name_index:]"/>
                                            <!-- td name="account_invoice_line_name" style="border-color: black"><span t-esc="l_name.replace(']',' ')" t-options="{'widget': 'text'}"/></td-->
                                            <td name="account_invoice_line_nopart" style="border-color: black">
                                                <t t-if="line.product_id.categ_id.name != 'Down Payment'">
                                                    <span t-esc="l_name[:name_index-2]" t-options="{'widget': 'text'}"/>
                                                </t>
                                                <t t-else="">
                                                    <span>Sales</span>
                                                </t>

                                            </td>
                                            <td name="account_invoice_line_name" style="border-color: black">
                                                <span t-esc="line_name" t-options="{'widget': 'text'}"/>

                                            </td>
                                            <!--<td style="border-color: black">-->
                                            <!--  <span t-field="line.product_id"/>-->
                                            <!--</td>-->
                                            <td class="text-right" style="border-color: black">
                                                <span t-esc="int(line.quantity)"/>
                                                <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                            </td>
                                            <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                style="border-color: black">
                                                <t t-if="line.tax_ids">

                                                    <t t-if="len(line.tax_ids[0].invoice_repartition_line_ids) &gt; 1 and line.tax_ids[0].invoice_repartition_line_ids[1].factor_percent &lt; 100">
                                                        <t t-set="other_dpp"
                                                           t-value="line.price_unit * line.tax_ids[0].invoice_repartition_line_ids[1].factor_percent/100"/>
                                                        <t t-set="price_unitppn"
                                                           t-value="line.price_unit + round(other_dpp * line.tax_ids[0].amount/100, 2)"/>

                                                        <t t-set="tot_price_unitppn"
                                                           t-value="price_unitppn*line.quantity"/>
                                                        <span class="text-nowrap" t-esc="price_unitppn"
                                                              t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                                        <t t-set="t_subtotal" t-value="t_subtotal + tot_price_unitppn"/>
                                                    </t>

                                                    <t t-else="">
                                                        <t t-if="o.operating_unit_id.id == 1">
                                                            <t t-set="price_unitppn"
                                                               t-value="round(line.price_unit*(1 + line.tax_ids[0].amount/100))"/>
                                                        </t>

                                                        <t t-else="">
                                                            <t t-set="price_unitppn"
                                                               t-value="line.price_unit*(1 + line.tax_ids[0].amount/100)"/>
                                                        </t>

                                                        <t t-set="tot_price_unitppn"
                                                           t-value="price_unitppn*line.quantity"/>
                                                        <span class="text-nowrap" t-esc="price_unitppn"
                                                              t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                                        <t t-set="t_subtotal" t-value="t_subtotal + tot_price_unitppn"/>
                                                    </t>

                                                </t>
                                                <t t-else="">
                                                    <span class="text-nowrap" style="border-color: black"
                                                          t-field="line.price_unit"/>
                                                    <t t-set="tot_price_unitppn" t-value="line.price_total"/>
                                                    <t t-set="t_subtotal" t-value="t_subtotal + line.price_total"/>
                                                </t>
                                                <!-- span class="text-nowrap" style="border-color: black" t-field="line.price_unit"/ -->
                                            </td>
                                            <!--<td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}" style="border-color: black">-->
                                            <!--    <span class="text-nowrap" t-field="line.discount"/>-->
                                            <!--</td>>
                                            <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}" style="border-color: black">
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                            </td-->
                                            <td class="text-right o_price_total"
                                                style="border-color: black; background-color:white">
                                                <!-- span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                                <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/ -->
                                                <t t-if="line.tax_ids">
                                                    <span class="text-nowrap" t-esc="tot_price_unitppn"
                                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                                </t>
                                                <t t-else="">
                                                    <span class="text-nowrap" style="border-color: black;"
                                                          t-field="line.price_total"/>
                                                </t>
                                            </td>
                                        </t>


                                        <!-- t t-if="line.display_type == 'line_section'">
                                            <td colspan="99" style="border-color: black">
                                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t-->
                                        <t t-if="line.display_type == 'line_note'">
                                            <td/>
                                            <td/>
                                            <td/>
                                            <td/>
                                            <td/>
                                            <td/>
                                            <!-- td colspan="99" style="border-color: black">

                                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                            </td -->
                                        </t>
                                    </tr>

                                    <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-right" style="color: black">
                                            <td colspan="99">
                                                <strong class="mr16" style="color: black; border-color: black">
                                                    Subtotal
                                                </strong>
                                                <span t-esc="current_subtotal"
                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                                <!-- t t-else="line.product_id.categ_id.name == 'Sales Discount'" -->

                            </t>
                        </tbody>
                    </table>


                    <div class="clearfix" style="border-color: black; background-color:white">
                        <div id="total" class="row" style="color: black; border-color: black">
                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto"
                                 style="border-color: black; background-color:white">
                                <table class="table table-sm"
                                       style="page-break-inside: avoid; color: black; border-color: black">
                                    <tr class="border-black o_subtotal"
                                        style="color: black; border-color: black; background-color:white">
                                        <td style="border-color: black; color: black">
                                            <strong style="color: black">Subtotal</strong>
                                        </td>
                                        <td class="text-right"
                                            style="color: black; border-color: black; background-color:white">
                                            <!--span t-field="o.amount_untaxed"/ -->
                                            <span style="border-color: black; background-color:white" t-esc="t_subtotal"
                                                  t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                        </td>
                                    </tr>

                                    <!-- t t-if="t_disc !=0" -->
                                    <tr class="border-black o_subtotal"
                                        style="color: black; border-color: black; background-color:white">
                                        <td>
                                            <strong style="color: black">Discount</strong>
                                        </td>
                                        <td class="text-right"
                                            style="color: black; border-color: black; background-color:white">
                                            <span t-esc="t_disc"
