<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.payment.request</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="30"/>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='account_vendor_bills']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" id="account_payment_request_settings">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane" id="digitalizeocr">
                            <label for="payment_request_journal_id" class="col-lg-3"/>
                            <field name="payment_request_journal_id"/>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box" id="account_payment_request_settings">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane" id="digitalizeocr">
                            <label for="payment_tax_account_id" class="col-lg-3"/>
                            <field name="payment_tax_account_id"/>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box" id="account_payment_request_settings">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane" id="digitalizeocr">
                            <label for="import_tax_account_id" class="col-lg-3"/>
                            <field name="import_tax_account_id"/>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box" id="account_payment_request_settings">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane" id="digitalizeocr">
                            <label for="import_duty_account_id" class="col-lg-3"/>
                            <field name="import_duty_account_id"/>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box" id="account_payment_request_settings">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane" id="digitalizeocr">
                            <label for="account_payable_id" class="col-lg-3"/>
                            <field name="account_payable_id"/>
                        </div>
                    </div>



                </xpath>
            </field>
        </record>
    </data>
</odoo>