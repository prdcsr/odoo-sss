<odoo>
    <record id="view_inventory_comparison_wizard" model="ir.ui.view">
        <field name="name">inventory.comparison.wizard.form</field>
        <field name="model">inventory.comparison.wizard</field>
        <field name="arch" type="xml">
            <form string="Inventory Comparison Report">
                <group>
                    <field name="report_date"/>
                    <field name="warehouse_id"/>
                </group>
                <footer>
                    <button name="action_export_excel" string="Export Excel" type="object" class="btn-success"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_inventory_comparison_wizard" model="ir.actions.act_window">
        <field name="name">Inventory Comparison Report</field>
        <field name="res_model">inventory.comparison.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_inventory_comparison_report" name="Inventory Comparsion Report"
              parent="stock.menu_warehouse_report"
              action="action_inventory_comparison_wizard"/>
</odoo>