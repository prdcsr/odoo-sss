<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_fnb_holiday_schedule_tree" model="ir.ui.view">
        <field name="name">fnb.holiday.schedule.tree</field>
        <field name="model">fnb.holiday.schedule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="is_yearly"/>
                <field name="is_national"/>
            </tree>
        </field>
    </record>
    <record id="view_fnb_holiday_schedule_form" model="ir.ui.view">
        <field name="name">fnb.holiday.schedule.form</field>
        <field name="model">fnb.holiday.schedule</field>
        <field name="arch" type="xml">
            <form string="Holiday Schedule">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                            <field name="is_yearly"/>
                            <field name="is_national"/>
                            <field name="notes"/>
                        </group>
                        <group string="Dates">
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_fnb_holiday_schedule" model="ir.actions.act_window">
        <field name="name">Holiday Schedules</field>
        <field name="res_model">fnb.holiday.schedule</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
