<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_fnb_promo_schedule_tree" model="ir.ui.view">
        <field name="name">fnb.promo.schedule.tree</field>
        <field name="model">fnb.promo.schedule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="weekday_ids"/>
                <field name="time_start"/>
                <field name="time_end"/>
            </tree>
        </field>
    </record>
    <record id="view_fnb_promo_schedule_form" model="ir.ui.view">
        <field name="name">fnb.promo.schedule.form</field>
        <field name="model">fnb.promo.schedule</field>
        <field name="arch" type="xml">
            <form string="Promotion Schedule">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                            <field name="notes"/>
                        </group>
                        <group string="Dates & Time">
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="weekday_ids"/>
                            <field name="weekday_multi"/>
                            <field name="time_start"/>
                            <field name="time_end"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_fnb_promo_schedule" model="ir.actions.act_window">
        <field name="name">Promotion Schedules</field>
        <field name="res_model">fnb.promo.schedule</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
