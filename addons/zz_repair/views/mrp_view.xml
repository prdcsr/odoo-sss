<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mrp_production_form_view" model="ir.ui.view">
            <field name="name">mrp.production.form.zz_repair</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name='priority'>20</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="operator_ids" widget="many2many_tags"
                           attrs="{'readonly': [('state', '!=', 'draft')]}"/>

                    <field name="technician_ids" widget="many2many_tags"
                           attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    <field name="requester_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    <!--                    <field name="costs_by_product"/>-->
                </xpath>
            </field>
        </record>

		<record id="view_stock_move_raw_tree_repair_inherit" model="ir.ui.view">
            <field name="name">stock.move.raw.tree.repair.inherit</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="mrp.view_stock_move_raw_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_uom_qty']" position="after">
					<field name="cost"/>
					<field name="total_cost"/>
				</xpath>
            </field>
        </record>

        <record id="mrp_workcenter_view_zz_repair" model="ir.ui.view">
            <field name="name">mrp.workcenter.form.zz_repair</field>
            <field name="model">mrp.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
            <field name='priority'>20</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='costs_hour']" position="after">
                    <field name="costs_by_product"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>