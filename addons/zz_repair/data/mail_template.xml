<odoo>
    <data noupdate="1">
        <record id="email_template_purchase_requisition_notification" model="mail.template">
            <field name="name">Purchase Requisition Notification</field>
            <field name="email_from">${(user.email or 'noreply@example.com')}</field>
            <field name="subject">Purchase Agreement - ${object.name} - </field>
            <field name="model_id" ref="purchase_requisition.model_purchase_requisition"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
                <p>Hello,</p>
                <p>Material request with number <b>${object.name}</b> has been created, Please Process it</p>
            ]]></field>
        </record>
    </data>

    <data noupdate="1">
        <record id="email_template_purchase_order_notification" model="mail.template">
            <field name="name">Purchase Order Notification</field>
            <field name="email_from">${(user.email or 'noreply@example.com')}</field>
            <field name="subject">Purchase Order - ${object.name} - </field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
                <p>Hello,</p>
                <p>Material request with number <b>${object.name}</b> has been created, Please Process it</p>
            ]]></field>
        </record>
    </data>
</odoo>
